<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aydin.firebasedemo.PrimaryController" prefWidth="640.0" prefHeight="480.0">
    <children>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #F4C542; -fx-border-color: #D7263D; -fx-border-width: 5; -fx-padding: 20;" prefWidth="640.0" prefHeight="480.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label text="CSC325-SW Engineering Student: check out the console window for the output messages..." style="-fx-font-family: 'Courier New'; -fx-font-size: 16; -fx-text-fill: #D7263D;" />
                <TextField fx:id="nameTextField" promptText="name" style="-fx-background-color: #FFE156; -fx-text-fill: #D7263D; -fx-border-color: #D7263D; -fx-border-width: 2;" />
                <TextField fx:id="ageTextField" promptText="age" style="-fx-background-color: #FFE156; -fx-text-fill: #D7263D; -fx-border-color: #D7263D; -fx-border-width: 2;" />
                <HBox alignment="TOP_CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="readButton" mnemonicParsing="false" onAction="#readButtonClicked" prefHeight="30.0" prefWidth="80.0" text="Read" style="-fx-background-color: #D7263D; -fx-text-fill: #FFFFFF; -fx-font-family: 'Courier New';" />
                        <Button fx:id="writeButton" mnemonicParsing="false" onAction="#writeButtonClicked" prefHeight="30.0" prefWidth="80.0" text="Write" style="-fx-background-color: #D7263D; -fx-text-fill: #FFFFFF; -fx-font-family: 'Courier New';" />
                        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#registerButtonClicked" prefHeight="30.0" prefWidth="80.0" text="Register" style="-fx-background-color: #D7263D; -fx-text-fill: #FFFFFF; -fx-font-family: 'Courier New';" />
                        <Button fx:id="switchSecondaryViewButton" onAction="#switchToSecondary" prefHeight="30.0" prefWidth="180.0" text="Switch to Secondary View" style="-fx-background-color: #D7263D; -fx-text-fill: #FFFFFF; -fx-font-family: 'Courier New';" />
                    </children>
                </HBox>
                <TextArea fx:id="outputTextArea" style="-fx-background-color: #FFE156; -fx-text-fill: #D7263D; -fx-border-color: #D7263D; -fx-border-width: 2; -fx-font-family: 'Courier New';" prefHeight="218.0" prefWidth="507.0" />
            </children>
        </VBox>
    </children>
</AnchorPane>

