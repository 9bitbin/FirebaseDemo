<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aydin.firebasedemo.SecondaryController" style="-fx-background-color: #F4C542; -fx-border-color: #D7263D; -fx-border-width: 5; -fx-padding: 20;">
    <children>
        <Label text="Secondary View" style="-fx-font-family: 'Courier New'; -fx-font-size: 20; -fx-text-fill: #D7263D;" />
        <Button fx:id="secondaryButton" onAction="#switchToPrimary" text="Switch to Primary View" style="-fx-background-color: #D7263D; -fx-text-fill: #FFFFFF; -fx-font-family: 'Courier New';" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>

